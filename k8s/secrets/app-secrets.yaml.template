apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
type: Opaque
stringData:
  # Database connection string
  database-url: "postgresql://user:password@host:port/database?sslmode=require"

  # JWT authentication secret (minimum 32 characters)
  jwt-secret: "your-jwt-secret-min-32-characters-long"

  # Groq API Configuration (for AI chat agent)
  openai-api-key: "gsk_your-groq-api-key-here"
  openai-base-url: "https://api.groq.com/openai/v1"
  openai-model: "llama-3.3-70b-versatile"

  # SMTP Configuration (Gmail)
  smtp-server: "smtp.gmail.com"
  smtp-port: "587"
  smtp-username: "your-gmail-address@gmail.com"
  smtp-password: "your-gmail-app-password"
  smtp-from-email: "your-gmail-address@gmail.com"
  smtp-from-name: "TODO App Notifications"
  email-notifications-enabled: "true"
