{
  "version": 2,
  "name": "todo-app-hackathon",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "BETTER_AUTH_SECRET": "@better-auth-secret",
    "DATABASE_URL": "@database-url",
    "FRONTEND_URL": "https://your-app.vercel.app"
  }
}
